<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_student_check_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context="csc383.busstopbuddy.StudentCheckIn">

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="41dp"
        android:text="Logout" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logoutButton"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/logoutButton"
        android:layout_marginStart="35dp"
        android:text="Student Check-in"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="30sp"
        android:layout_toStartOf="@+id/logoutButton" />

    <CheckBox
        android:id="@+id/studentCheck1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Andy"
        android:textSize="24sp"
        android:layout_below="@+id/textView37"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/studentCheck2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/studentCheck1"
        android:layout_below="@+id/studentCheck1"
        android:layout_marginTop="13dp"
        android:text="Randy"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/studentCheck3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/studentCheck2"
        android:layout_below="@+id/studentCheck2"
        android:layout_marginTop="12dp"
        android:text="Sandy"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/studentCheck4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/studentCheck3"
        android:layout_below="@+id/studentCheck3"
        android:layout_marginTop="15dp"
        android:text="Mandy"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/studentCheck5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/studentCheck4"
        android:layout_below="@+id/studentCheck4"
        android:layout_marginTop="18dp"
        android:text="Candy"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/studentCheck6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/studentCheck5"
        android:layout_below="@+id/studentCheck5"
        android:layout_marginTop="19dp"
        android:text="Dandy"
        android:textSize="24sp" />

    <Button
        android:id="@+id/updateStudentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentCheck6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Update Student Check-in" />

</RelativeLayout>
